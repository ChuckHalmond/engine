{
  "compilerOptions": {
    "target": "es2022",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "editor/*": ["./node_modules/editor/*"]
    },
    "types": ["@webgpu/types"]
  },
  "exclude": [
    "./node_modules",
    "./web"
  ]
}